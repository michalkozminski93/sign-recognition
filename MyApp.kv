<AppLayout>:

    BoxLayout:
        orientation: "horizontal"

        KivyCamera:
            id: cam
			size_hint_x: 0.9

        BoxLayout:
            orientation: "vertical"
            height: 20
            size_hint_x: 0.1

            Button:
                id: butt_start
                size_hint_y: 0.1
                text: "start"
                on_press: root.dostart()

            Button:
                id: butt_exit
                text: "quit"
                size_hint_y: 0.1
                on_press: root.doexit()